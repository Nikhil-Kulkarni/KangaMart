<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.brandon.kangamart.Payment"
    android:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/payment"
        android:text="Payment"
        android:textSize="50sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/cost"
        android:layout_below="@id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Cost: "
        android:textSize="30sp"
        android:paddingTop="50sp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:id="@+id/number_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cost">

        <TextView
            android:id="@+id/card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Number"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:paddingTop="50sp"/>

        <EditText
            android:id="@+id/enter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Card Number"
            android:textSize="19sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/security_code"
        android:text="Security Code"
        android:layout_below="@id/number_entry"
        android:paddingTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/security"
            android:text="Security Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/security_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Security Code"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/expiration"
        android:layout_below="@id/security_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50sp">

        <TextView
            android:id="@+id/expiration_lbl"
            android:text="Expiration"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/expiration_fld"
            android:hint="Enter Expiration Date"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
